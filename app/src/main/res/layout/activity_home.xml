<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/biru_dongker"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        // Botton Logo

        // Botton Back

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:tint="@color/hijau_toska"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        // Profile

        <ImageView
            android:id="@+id/img_back2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:src="@drawable/ic_back"
            android:tint="@color/hijau_toska"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            android:tint="@color/hijau_toska"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile"
            android:textColor="@color/hijau_toska"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/img_profile"
            app:layout_constraintEnd_toEndOf="parent" />

        // Teks Hi User
        <TextView
            android:id="@+id/txt_hiuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, User"
            android:textColor="@color/hijau_toska"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        // Icon Hi User
        <ImageView
            android:id="@+id/img_hi"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/hi"
            android:tint="@color/hijau_toska"
            app:layout_constraintStart_toEndOf="@id/txt_hiuser"
            app:layout_constraintTop_toTopOf="@id/txt_hiuser" />

        // Teks Lets Play
        <TextView
            android:id="@+id/txt_LetsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Let's Play !"
            android:textColor="@color/hijau_toska"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_hiuser" />

        // Botton Memilih Level
        <Button
            android:id="@+id/btn_pilihlevel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1976D2"
            android:elevation="6dp"
            android:translationZ="6dp"
            android:text="Memilih Level ðŸ§ "
            android:textColor="@color/putih"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_LetsPlay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        // Teks Level
        <TextView
            android:id="@+id/txt_levels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Level's"
            android:textColor="@color/hijau_toska"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btn_pilihlevel"
            app:layout_constraintStart_toStartOf="parent" />

        // Botton Level 1

        // Botton Level 2

        // Botton Level 3

        <RelativeLayout
            android:id="@+id/btn_lvl1"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="#2196F3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_levels">

            <!-- ICON MEDAL -->
            <ImageView
                android:id="@+id/icon_medal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/text_lvl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:layout_toStartOf="@id/arrow_lvl1"
                android:layout_toEndOf="@id/icon_medal"
                android:fontFamily="@font/poppinsbold"
                android:text="LEVEL 1"
                android:textColor="@color/putih"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/arrow_lvl1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                android:tint="#FBC02D" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_lvl2"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/biru_toska"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_lvl1">

            <ImageView
                android:id="@+id/icon_lvl2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/text_lvl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/icon_lvl2"
                android:fontFamily="@font/poppinsbold"
                android:text="LEVEL 2"
                android:textColor="@color/putih"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:id="@+id/arrow_lvl2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                android:tint="#FBC02D" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_lvl3"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="#2196F3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_lvl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:id="@+id/icon_lvl3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/text_lvl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/icon_lvl3"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/poppinsbold"
                android:text="LEVEL 3"
                android:textColor="@color/putih"
                android:textSize="16sp" >

            </TextView>

            <ImageView
                android:id="@+id/arrow_lvl3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                android:tint="#FBC02D"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_lvl4"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/biru_toska"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_lvl2">

            <ImageView
                android:id="@+id/icon_lvl3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/text_lvl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/icon_lvl3"
                android:fontFamily="@font/poppinsbold"
                android:text="LEVEL 4"
                android:textColor="@color/putih"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:id="@+id/arrow_lvl3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                android:tint="#FBC02D" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_lvl4"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/biru_toska"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_lvl2">

            <ImageView
                android:id="@+id/icon_lvl3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/text_lvl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/icon_lvl3"
                android:fontFamily="@font/poppinsbold"
                android:text="LEVEL 4"
                android:textColor="@color/putih"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:id="@+id/arrow_lvl3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow"
                android:tint="#FBC02D" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>