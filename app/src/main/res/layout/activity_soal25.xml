<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Soal11Activity"
    android:background="@color/biru_dongker">

    <!-- Tombol Kembali -->
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back"
        android:tint="@color/hijau_toska"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Login Icon di Kanan Atas -->
    <ImageView
        android:id="@+id/img_login"
        android:layout_width="65dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/login"
        android:contentDescription="login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon Medal -->
    <ImageView
        android:id="@+id/icon_medal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="145dp"
        android:src="@drawable/medal"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Text Level -->
    <TextView
        android:id="@+id/txt_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL 2"
        android:textColor="@color/putih"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintStart_toEndOf="@id/icon_medal"
        app:layout_constraintTop_toTopOf="@id/icon_medal"
        app:layout_constraintBottom_toBottomOf="@id/icon_medal" />

    <!-- Arrow -->
    <ImageView
        android:id="@+id/arrow_lvl1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/arrow"
        android:tint="#FBC02D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gambar Soal -->
    <ImageView
        android:id="@+id/img_soal24"
        android:layout_width="0dp"
        android:layout_height="195dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bendera"
        app:layout_constraintTop_toBottomOf="@id/icon_medal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Materi & Soal -->
    <RelativeLayout
        android:id="@+id/btn_soal24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/biru"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_soal24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_mtri24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bendera Indonesia memiliki dua warna yang melambangkan semangat perjuangan dan kemurnian hati. Warna atas menunjukkan keberanian, sementara warna bawah melambangkan kesucian."
            android:textColor="@color/hitam"
            android:justificationMode="inter_word"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular" />

        <TextView
            android:id="@+id/txt_soal24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_mtri24"
            android:text="Apa nama bendera nasional Indonesia?"
            android:textColor="@color/hitam"
            android:justificationMode="inter_word"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold" />
    </RelativeLayout>

    <!-- Pilihan Jawaban -->
    <!-- A -->
    <Button
        android:id="@+id/btn_a24"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:text="Merah Jaya"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/biru"
        app:layout_constraintTop_toBottomOf="@id/btn_soal24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_c24"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp" />

    <!-- C -->
    <Button
        android:id="@+id/btn_c24"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:text="Merah Putih Abadi"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/biru"
        app:layout_constraintTop_toTopOf="@id/btn_a24"
        app:layout_constraintStart_toEndOf="@id/btn_a24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp" />

    <!-- B -->
    <Button
        android:id="@+id/btn_b24"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:text="Bendera Tanah Air"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/biru"
        app:layout_constraintTop_toBottomOf="@id/btn_a24"
        app:layout_constraintStart_toStartOf="@id/btn_a24"
        app:layout_constraintEnd_toStartOf="@+id/btn_d24"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

    <!-- D -->
    <Button
        android:id="@+id/btn_d24"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:text=" Sang Saka Merah Putih "
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/biru"
        app:layout_constraintTop_toTopOf="@id/btn_b24"
        app:layout_constraintStart_toEndOf="@id/btn_b24"
        app:layout_constraintEnd_toEndOf="@id/btn_c24"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
