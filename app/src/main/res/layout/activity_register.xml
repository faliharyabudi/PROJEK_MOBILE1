<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="16dp"
    android:background="@color/biru_dongker">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:tint="@color/hijau_toska"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>


    <TextView
        android:id="@+id/R_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:text="Come Join LEARNIFY !"
        android:textColor="@color/hijau_toska"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/R_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuis Interaktif untuk Pembelajaran Mandiri!"
        android:textColor="@color/putih"
        android:textSize="12sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/R_txt_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edt_fullname"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Enter Your Full Name"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/putih"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/R_txt_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Enter Your Email"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/putih"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/edt_fullname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Create Password"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/putih"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/edt_conf_password"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Confirm Password"
        android:fontFamily="@font/poppinsregular"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/putih"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Register"
        android:textColor="@color/putih"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/hijau_toska"
        app:layout_constraintTop_toBottomOf="@id/edt_conf_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/putih"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/hijau_toska"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsbold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
